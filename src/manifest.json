{
  "name": "Responsive OneCognizant",
  "version": "1.0.0",
  "description": "Makes OneCognizant responsive",
  "icons": {
    "128": "./images/cognizant_logo.png"
  },
  "content_scripts": [
    {
      "matches": [
        "https://onecognizant.cognizant.com/*"
      ],
      "js": [
        "/js/oneCognizant.js"
      ]
    },
    {
      "matches": [
        "https://onecognizantbcazrapps.cognizant.com/2736/*"
      ],
      "js": [
        "/js/associate360.js"
      ]
    },
    {
      "matches": [
        "https://onecognizantbcazrapps.cognizant.com/2394/*"
      ],
      "js": [
        "/js/goPerform.js"
      ]
    },
    {
      "matches": [
        "https://onecognizantchat.cognizant.com/2425/*"
      ],
      "js": [
        "/js/liveSupport.js"
      ]
    },
    {
      "matches": [
        "https://onecognizantazrapps.cognizant.com/1738/*"
      ],
      "js": [
        "/js/myLearningStudio.js"
      ]
    }
  ],
  "web_accessible_resources": [
    {
      "matches": [
        "https://onecognizant.cognizant.com/*"
      ],
      "resources": [
        "/images/*",
        "/css/oneCognizant.css"
      ]
    },
    {
      "matches": [
        "https://onecognizantbcazrapps.cognizant.com/*"
      ],
      "resources": [
        "/images/*",
        "/css/associate360.css"
      ]
    },
    {
      "matches": [
        "https://onecognizantbcazrapps.cognizant.com/*"
      ],
      "resources": [
        "/images/*",
        "/css/goPerform.css"
      ]
    },
    {
      "matches": [
        "https://onecognizantchat.cognizant.com/*"
      ],
      "resources": [
        "/images/*",
        "/css/liveSupport.css"
      ]
    },
    {
      "matches": [
        "https://onecognizantazrapps.cognizant.com/*"
      ],
      "resources": [
        "/images/*",
        "/css/myLearningStudio.css"
      ]
    }
  ],
  "permissions": [
    "tabs"
  ],
  "action": {
    "default_icon": {
      "128": "./images/cognizant_logo.png"
    },
    "default_title": "Responsive OneCognizant",
    "default_popup": "./popup.html"
  },
  "manifest_version": 3
}
